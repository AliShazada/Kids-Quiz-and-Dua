<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2" >

    <ImageView
        android:id="@+id/img2_a"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/img1_a"
        android:layout_centerHorizontal="true"
        android:src="@drawable/graystar" />

    <ImageView
        android:id="@+id/img3_a"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/img2_a"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/img2_a"
        android:src="@drawable/graystar" />

<!--     <ImageView -->
<!--         android:id="@+id/imageView1_a" -->
<!--         android:layout_width="fill_parent" -->
<!--         android:layout_height="340dp" -->
<!--         android:layout_alignParentLeft="true" -->
<!--         android:layout_below="@+id/img2_a" -->
<!--         android:src="@drawable/dua2" /> -->

    <ImageView
        android:id="@+id/imageView1_a"
        android:layout_width="400dp"
        android:layout_height="390dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img2_a"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/dua3" />

    <ImageView
        android:id="@+id/stop3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView1_a"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/stop_button" />

    <ImageView
        android:id="@+id/next_lay_one_but3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1_a"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="135dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:src="@drawable/next_button"
        android:visibility="invisible"  />

    <ImageView
        android:id="@+id/play_button2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView1_a"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="220dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/play_button" />

    <ImageView
        android:id="@+id/img1_a"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/graystar" />
    
    <ImageView
        android:id="@+id/close_btn3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView1_a"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/close" />

</RelativeLayout>